---
import Layout from '~/layouts/PageLayout.astro';

import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';

const metadata = {
  title: 'Tiep Phan — Lập Trình Thật Kỳ Diệu',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'View my latest posts',
        href: '#highlighted-posts',
        icon: 'tabler:chevrons-down',
      },
    ]}
    image={{ src: '~/assets/images/hero-laptop.jpg', alt: 'Blog Hero Image' }}
  >
    <Fragment slot="title">Tiep Phan's Blog</Fragment>

    <Fragment slot="subtitle">
      <strong>Hi, I'm Tiep Phan.</strong>
      <span>With over a decade of experience as a Senior Software Engineer,</span>
      <strong> former Google Developer Expert (GDE) specializing in Angular, </strong>
      <span>and a lifelong student of the web.</span>
      <span>After 10+ years in the industry, I’ve seen technology shift dramatically.</span>
      <span>I am deeply committed to the "craft" of development, using</span>
      <strong>TypeScript, Angular, and React</strong>
      <span>not just to build features, but to deliver high-quality, scalable products.</span>
      <br/>
      <span>This blog is a collection of my technical research, experiments, and professional experiences from ten years on the front lines of engineering.</span>
      <strong>Welcome!</strong>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />
  <!-- HighlightedPosts Widget ******* -->
  <div id="highlighted-posts"></div>
  <BlogLatestPosts title="Find out more content in our Blog" />
</Layout>
